<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cards"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imagen"
            android:layout_marginStart="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cargarimg"
            app:shapeAppearanceOverlay="@style/VistaRedondaImagenes"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:id="@+id/nombres"
            android:text="nombres y apellidos"
            android:textColor="#507ae3"
            android:layout_toEndOf="@+id/imagen"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/descripcion"
            android:src="@drawable/opciones"
            android:textColor="#507ae3"
            android:layout_toEndOf="@+id/nombres"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>